---
export interface Props {
  image: string;
  title: string;
  description: string;
  stack: string;
  demo: string;
  repo: string;
}
const { image, title, description, stack, demo, repo } = Astro.props;
---

<article
  class="bg-white rounded-xl shadow p-5 flex flex-col gap-3 border border-gray-100"
>
  <img
    src={image}
    alt={title}
    class="w-full h-40 object-cover rounded mb-3 bg-gray-100"
    loading="lazy"
  />
  <h2 class="text-xl font-bold mb-1">{title}</h2>
  <p class="text-sm text-gray-700 mb-2">{description}</p>
  <div class="text-xs text-gray-500 mb-2">{stack}</div>
  <div class="flex gap-3 mt-auto">
    <a href={demo} target="_blank" rel="noopener" class="btn btn-primary"
      >Demo</a
    >
    <a href={repo} target="_blank" rel="noopener" class="btn btn-secondary"
      >Repositorio</a
    >
  </div>
</article>
